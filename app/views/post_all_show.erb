<div class="container">
	<h1> My Blog</h1>


	<table border ="1" style ="width:100%">
		<!-- Table Title -->
		<!-- 1st row -->
		<tr>
			<td style="width:20"> <b> Post ID </b> </td>
			<td style="width:80"> <b> Titles </b> </td>
			<td style="width:80"> <b> Tags </b> </td>
			<td style="width:80"> <b> </b> </td>

		</tr>
		<!-- 2nd row ONWARDS -->
		<% @posts.each do |post| %>
		<tr>
			
				<td style="width:20"><%= post.id%> </td>
				
				<td style="width:80">
					<a href="/posts/<%= post.id %>">
					<%= post.title%></a>
				</td>

				<td style="width:80">
				<% post.tags.each do |tag| %>
				<a href="/tags/<%= tag.name %>">
					<%= tag.name%></a>&nbsp;
				<% end %>
				</td>			

			
				<td style="width:80">
				<form action="/posts/<%= post.id %>/edit" method="GET">
				<input type="submit" value="Edit">
				</form>
				</td>	
		
		</tr>
			<%end%>
			
	</table>
	<br>
	
	<form action="/posts/new" method="GET"> 
    <input type="submit" value="Create new post">
  	</form>


</div>
