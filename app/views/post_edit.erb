


<div class ="container">
<h1>Post Edit</h1>

<% if @post %>
  <% @post.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/posts/<%=@post.id%>" method="POST">
  <br>
    <b> Title: </b>
  <br> 
    <input type="text" name="post[title]" value="<%= @post.title %>">
    <br>
  
  <br>
    <b> Content: </b>
  <br> 
    <textarea name="post[content]" rows="10" cols="20"><%= @post.content %></textarea>
    <br>
  <br>
    <b> Tags: </b>
  <br> 
    <input type="text" 
    		name="tag[name]"
    		value= "<% @post.tags.each do |tag| %><%= tag.name %>,<% end %>"
    >
        <label for="tag[name]">(** RMBR to separate added tags via comma ",")</label>
        <br>
    <br>

  <input type="submit" value="Update!">
</form>
</div>