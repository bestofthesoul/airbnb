
<h1>Edit a post</h1>

<% if @post %>
  <% @post.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/posts/<%=@post.id%>" method="POST">

  <label>Title:</label>
    <br>
    <input type="text" name="post[title]" value="<%= @post.title %>">
    <br>
  
  <label>Content:</label>
    <br>
    <textarea name="post[content]" rows="10" cols="20"><%= @post.content %></textarea>
    <br>
  
  <label>Tags:</label>
    <br>
    <input type="text" 
    		name="tag[name]"
    		value= "<% @post.tags.each do |tag| %><%= tag.name %>,<% end %>"
    >
     <label for="tag[name]">Tags: (separate via comma "," . eg. tag1, tag2, some other tag)</label><br>
    <br>

  <input type="submit" value="Update!">
</form>